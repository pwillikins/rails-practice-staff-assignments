<h1>Edit a Staff Member</h1>

<%= form_for @person do |f| %>
  <% f.object.errors.full_messages.each do |error| %>
    <%= error %>
  <% end %>

  <div class="form-row">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, placeholder: "i.e. Dr." %>
  </div>

  <div class="form-row">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="form-row">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="form-row">
    <%= f.submit "Save" %>
  </div>

<% end %>